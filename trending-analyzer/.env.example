# Kafka Configuration
KAFKA_BROKERS=kafka-1:9092,kafka-2:9092,kafka-3:9092
KAFKA_TOPIC=InteractionCollected # Verify this topic name!
KAFKA_GROUP_ID=trending-analyzer-group

# Spark Configuration
# For production, set to your Spark cluster URL (e.g., spark://your-master:7077 or yarn)
SPARK_MASTER=local[*] # Example for local testing
SPARK_APP_NAME=TrendingWallpaperAnalyzer
WINDOW_DURATION_SECONDS=3600 # 1 hour
SLIDE_DURATION_SECONDS=600 # e.g., 10 minutes

# Redis Configuration (REQUIRED - No defaults in config.py for host)
REDIS_HOST= # e.g., redis-host.example.com or IP address
REDIS_PORT=6379
REDIS_DB=0
REDIS_TRENDING_KEY=trending_wallpapers 